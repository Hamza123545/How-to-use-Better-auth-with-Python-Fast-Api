{
    "info": {
        "_postman_id": "fastapi-auth-rate-limit",
        "name": "FastAPI Auth & Rate Limiting",
        "description": "Collection for testing FastAPI Authorization (RBAC) and Rate Limiting endpoints.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Signup (Admin)",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"adminuser\",\n    \"password\": \"secret123\",\n    \"role\": \"admin\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/signup",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "signup"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "2. Login (Get Token)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                            "console.log(\"Saved access_token: \" + jsonData.access_token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "username",
                            "value": "adminuser",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "secret123",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/token",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "token"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "3. Get Current User (Me)",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{access_token}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/users/me",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "users",
                        "me"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "4. Admin Dashboard (Protected)",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{access_token}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/admin/dashboard",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "admin",
                        "dashboard"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "5. Owner Settings (Protected)",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{access_token}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/owner/settings",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "owner",
                        "settings"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "6. Rate Limited Endpoint",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/limited",
                    "protocol": "http",
                    "host": [
                        "127",
                        "0",
                        "0",
                        "1"
                    ],
                    "port": "8000",
                    "path": [
                        "limited"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "access_token",
            "value": ""
        }
    ]
}